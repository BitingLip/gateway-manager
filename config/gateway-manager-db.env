# Gateway Manager Database Configuration
# Dedicated PostgreSQL database for API gateway logs and rate limiting

# Database connection settings
GATEWAY_DB_HOST=localhost
GATEWAY_DB_PORT=5432
GATEWAY_DB_NAME=bitinglip_gateway
GATEWAY_DB_USER=gateway_manager
GATEWAY_DB_PASSWORD=gateway_manager_2025!

# Connection pool settings
GATEWAY_DB_POOL_SIZE=15
GATEWAY_DB_MAX_OVERFLOW=30
GATEWAY_DB_POOL_TIMEOUT=30

# Gateway-specific settings
GATEWAY_LOG_RETENTION_DAYS=30
GATEWAY_RATE_LIMIT_WINDOW=3600
GATEWAY_METRICS_AGGREGATION_INTERVAL=60

# API monitoring settings
GATEWAY_REQUEST_LOGGING=true
GATEWAY_ERROR_LOGGING=true
GATEWAY_PERFORMANCE_TRACKING=true
GATEWAY_SECURITY_AUDIT_LOGGING=true

# Logging and monitoring
GATEWAY_DB_LOG_LEVEL=INFO
GATEWAY_DB_SLOW_QUERY_THRESHOLD=0.5
GATEWAY_DB_CONNECTION_LOGGING=false

# Backup and maintenance
GATEWAY_DB_AUTO_BACKUP=true
GATEWAY_DB_BACKUP_INTERVAL_HOURS=12
GATEWAY_DB_VACUUM_SCHEDULE="0 1 * * *"
